<div class="container">
    <div class="jumbotron">
        <h1>Eat The Burger</h1>
        <br>
        <h2>Please Enter a Burger</h2>
        <div class="card">
            <div class="card-body">
                <form>
                    <div class="form-group">
                        <label for="newburger">Order New Burger</label>
                        <input type="text" class="form-control" name="burger_name" value="" id="enter_text">
                        <button type="submit" class="btn btn-primary" id="text-enter-button">Order</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-heading">
                        <strong>Pick Up Your Burger</strong>
                    </div>
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}

                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="eatburger btn btn-secondary" id="devourbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button>
                        {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-heading">
                        <strong>Eat Your Burger</strong>
                    </div>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                        <button type="button" class="ateburger btn btn-secondary" id="atebutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"></button>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
